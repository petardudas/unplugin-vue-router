{
  "include": [
    "*.d.ts",
    "src/**/*.ts",
    "src/*.d.ts",
    "tests,"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "paths": {
      "~/*": [
        "./*"
      ],
    },
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "types": [
      "vite/client"
    ]
  }
}
